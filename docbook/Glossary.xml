  <glossentry xml:id="gloss-GParted">
    <glossterm>GParted</glossterm>
    <glossdef>
      <para>A graphical application used for manipulating (creating, resizing, moving, copying) the filesystems of partitions.</para>
    </glossdef>
  </glossentry>

  <glossentry xml:id="gloss-Guest-OS">
    <glossterm>Guest OS</glossterm>
    <glossdef>
      <para>An operating system which is installed and ran on emulatd, virtual, or paravirtual hardware which is managed by hypervisor software on the Host OS.</para>
      <glossseealso otherterm="gloss-Hypervisor" />
      <glossseealso otherterm="gloss-Host-OS" />
    </glossdef>
  </glossentry>

