  <glossentry xml:id="gloss-MBR">
    <glossterm>MBR</glossterm>
    <glossdef>
      <para>The <firstterm>Master Boot Record</firstterm> holds the information on how the logical partitions, containing file systems, are organized on a storage device.</para>
      <glossseealso otherterm="gloss-Partition" />
      <glossseealso otherterm="gloss-Partition-table" />
    </glossdef>
  </glossentry>

  <glossentry xml:id="gloss-meta-data">
    <glossterm>meta-data</glossterm>
    <glossdef>
      <para>Data which describes other data; e.g., virtual disk configuration parameters.</para>
    </glossdef>
  </glossentry>

  <glossentry xml:id="gloss-mount">
    <glossterm>mount</glossterm>
    <glossdef>
      <para>A utility program which attaches a filesystem to a directory tree.</para>
      <glossseealso otherterm="gloss-umount" />
      <glossseealso otherterm="gloss-Filesystem" />
    </glossdef>
  </glossentry>

  <glossentry xml:id="gloss-NUL">
    <glossterm>NUL</glossterm>
