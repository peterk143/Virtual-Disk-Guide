  <glossentry xml:id="gloss-AES-encryption">
    <glossterm>AES encryption</glossterm>
    <glossdef>
      <para><firstterm>Advanced Encryption Standard</firstterm> - very fast and secure; the de facto standard for symmetric encryption.</para>
      <glossseealso otherterm="gloss-zlib-compression" />
    </glossdef>
  </glossentry>

  <glossentry xml:id="gloss-ASCII">
    <glossterm>ASCII</glossterm>
    <glossdef>
      <para>American Standard Code for Information Interchange. It is a 7-bit code. ASCII encodes characters as you would enter them into a computer (like this book)</para>
    </glossdef>
  </glossentry>

  <glossentry xml:id="gloss-Backing-image">
    <glossterm>Backing image</glossterm>
    <glossdef>
      <para>A (typically) read-only disk image which can be used as a starting point for new read-write images.</para>
      <glossseealso otherterm="gloss-Snapshot" />
    </glossdef>
  </glossentry>

