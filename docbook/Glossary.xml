  <glossentry xml:id="gloss-Image">
    <glossterm>Image</glossterm>
    <glossdef>
      <para>A file which virtualization software can use as a hard disk, similar to a snapshot.</para>
      <glossseealso otherterm="gloss-Snapshot" />
    </glossdef>
  </glossentry>

  <glossentry xml:id="gloss-kpartx">
    <glossterm>kpartx</glossterm>
    <glossdef>
      <para>Reads partition tables on a specified device and create device maps over partition segments detected.</para>
      <glossseealso otherterm="gloss-Partition" />
    </glossdef>
  </glossentry>

