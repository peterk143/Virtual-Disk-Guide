    </glossdef>
  </glossentry>

  <glossentry xml:id="gloss-Host-OS">
    <glossterm>Host OS</glossterm>
    <glossdef>
      <para>The running system (server, OS) which provides resources and facilities for running several virtual Guest Operating Systems.</para>
      <glossseealso otherterm="gloss-Guest-OS" />
    </glossdef>
  </glossentry>

